@model IEnumerable<DataLayer.Faq>


@{
    ViewBag.Title = "سوالات متداول";
    Layout = "~/Views/Shared/_FrutinLayout.cshtml";
}



@* header title *@
<div class="breadcumb-wrapper background-image" style="background-image: url(&quot;Content/Refrence/img/bg/breadcumb-bg.jpg&quot;);">
    <div class="container">
        <div class="breadcumb-content">
            <h1 class="breadcumb-title">@ViewBag.Title</h1>
            <ul class="breadcumb-menu">
                <li>
                    @Html.ActionLink("صفحه اصلی", "Index", "Home")
                </li>
                <li>@ViewBag.Title</li>
            </ul>
        </div>
    </div>
</div>

@* content *@
<div class="space">
    <div class="container">
        <div class="title-area text-center">
            <span class="sub-title"><img src="Content/Refrence/img/theme-img/title_icon.svg" alt="Icon">به دنبال پاسخ هستید؟</span><h2 class="sec-title">متداول پرسیده می شود<br>سوالی هست؟</h2>
        </div>
        <div class="row gy-4">
            <div class="col-xl-6">
                <div class="accordion-1 accordion" id="faqAccordion">

                    @foreach (var item in Model)
                    {
                        <div class="accordion-card ">
                            <div class="accordion-header" id="collapse-item-@item.FaqID">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@item.FaqID" aria-expanded="false" aria-controls="collapse-2">@item.Question</button>
                            </div>
                            <div id="collapse-@item.FaqID" class="accordion-collapse collapse " aria-labelledby="collapse-item-@item.FaqID" data-bs-parent="#faqAccordion"><div class="accordion-body"><p class="faq-text">@item.Answer</p></div></div>
                        </div>
                    }

                </div>

                @* we can create a list of faq in mirror position with id="faqAccordion2" *@

            </div>
        </div>
    </div>
</div>