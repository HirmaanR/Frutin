@model IEnumerable<DataLayer.Category>
@{
    ViewBag.Title = "Frutin - Home";
    Layout = "~/Views/Shared/_FrutinLayout.cshtml";
}


<div>

    @Html.Action("Index", "_SliderPartial") @* dynamic slider (partial) *@

    <div id="QuickView" class="white-popup mfp-hide">
        <div class="container bg-white rounded-10">
            <div class="row gx-60">
                <div class="col-lg-6"><div class="product-big-img"><div class="img"><img src="Content/Refrence/img/product/product_details_1_1.jpg" alt="Product Image"></div></div></div>
                <div class="col-lg-6 align-self-center">
                    <div class="product-about">
                        <p class="price">$120.85<del>$150.99</del></p>
                        <h2 class="product-title">میوه سیب بوسکو</h2>
                        <div class="product-rating">
                            <div class="star-rating" role="img" aria-label="Rated 5.00 out of 5"><span style="width:100%">دارای رتبه<strong class="rating">5.00</strong>از 5 بر اساس<span class="rating">1</span>رتبه بندی مشتری</span></div>
                            <a href="shop-details.html" class="woocommerce-review-link">(<span class="count">4</span>نظرات مشتریان)</a>
                        </div>
                        <p class="text">برای شروع یک سفر حسی با سیب بوسکو آماده شوید، میوه ای که فراتر از چیزهای معمولی است و تجربه طعمی بی نظیر را نوید می دهد. این سیب‌ها چیزی جز شاهکار طبیعت نیستند که به دلیل ترکیب متمایز طعم‌ها و جذابیت بصری فریبنده‌شان شناخته می‌شوند.</p>
                        <div class="mt-2 link-inherit"><p><strong class="text-title me-3">دسترسی:</strong><span class="stock in-stock"><i class="far fa-check-square me-2 ms-1"></i>در انبار</span></p></div>
                        <div class="actions">
                            <div class="quantity">
                                <input type="number" class="qty-input" step="1" min="1" max="100" name="quantity" value="1" title="Qty"><button class="quantity-plus qty-btn"><i class="far fa-chevron-up"></i></button><button class="quantity-minus qty-btn"><i class="far fa-chevron-down"></i></button>
                            </div>
                            <button class="th-btn">به سبد خرید اضافه کنید</button><a href="wishlist.html" class="icon-btn"><i class="far fa-heart"></i></a>
                        </div>
                        <div class="product_meta">
                            <span class="sku_wrapper">SKU:<span class="sku">بوسکو-سیب-میوه</span></span><span class="posted_in">دسته بندی:<a href="shop.html">میوه های تازه</a></span><span>برچسب ها:<a href="shop.html">میوه ها</a><a href="shop.html">ارگانیک. آلی</a></span>
                        </div>
                    </div>
                </div>
            </div>
            <button title="Close (Esc)" type="button" class="mfp-close">×</button>
        </div>
    </div>

    <section class="space-top"> @* categories *@
        <div class="container">
            <div class="title-area text-center">
                <span class="sub-title"><img src="Content/Refrence/img/theme-img/title_icon.svg" alt="Icon">دسته غذا</span><h2 class="sec-title">آنچه ما ارائه می دهیم</h2>
            </div>
            <div class="swiper th-slider swiper-initialized swiper-horizontal swiper-rtl swiper-backface-hidden" data-slider-options="{&quot;breakpoints&quot;:{&quot;0&quot;:{&quot;slidesPerView&quot;:1},&quot;400&quot;:{&quot;slidesPerView&quot;:&quot;2&quot;},&quot;768&quot;:{&quot;slidesPerView&quot;:&quot;3&quot;},&quot;992&quot;:{&quot;slidesPerView&quot;:&quot;4&quot;},&quot;1200&quot;:{&quot;slidesPerView&quot;:&quot;5&quot;}}}">
                <div class="swiper-wrapper" id="swiper-wrapper-19dd04e6ca823726" aria-live="off" style="transition-duration: 1000ms; transform: translate3d(540px, 0px, 0px);">

                    @foreach (var item in Model.Select((value, index) => new { index, value }))
                    {
                        var value = item.value;
                        var index = item.index;

                        if (index == 0)
                        {
                            <div class="swiper-slide swiper-slide-active" role="group" aria-label="2 / 5" style="width: 246px; margin-left: 24px;" data-swiper-slide-index="1">
                                <div class="category-card">
                                    <div class="box-shape background-image" style="background-image: url(&quot;Content/Refrence/img/bg/category_card_bg.png&quot;);"></div>
                                    <div class="box-icon bg-mask" style="mask-image: url(&quot;Content/Refrence/img/bg/category_card_icon_bg.png&quot;);"><img src="~/Content/Images/Categories/@value.ImageName" alt="Image"></div>
                                    <p class="box-subtitle">محصول : @value.Products.Count()</p>
                                    <h3 class="box-title"><a href="shop.html">@value.Tittle</a></h3>
                                </div>
                            </div>
                        }
                        else if (index == 1)
                        {
                            <div class="swiper-slide swiper-slide-next" role="group" aria-label="2 / 5" style="width: 246px; margin-left: 24px;" data-swiper-slide-index="1">
                                <div class="category-card">
                                    <div class="box-shape background-image" style="background-image: url(&quot;Content/Refrence/img/bg/category_card_bg.png&quot;);"></div>
                                    <div class="box-icon bg-mask" style="mask-image: url(&quot;Content/Refrence/img/bg/category_card_icon_bg.png&quot;);"><img src="~/Content/Images/Categories/@value.ImageName" alt="Image"></div>
                                    <p class="box-subtitle">محصول : @value.Products.Count()</p>
                                    <h3 class="box-title"><a href="shop.html">@value.Tittle</a></h3>
                                </div>
                            </div>
                        }
                        else if (index == 2)
                        {
                            <div class="swiper-slide swiper-slide-prev" role="group" aria-label="2 / 5" style="width: 246px; margin-left: 24px;" data-swiper-slide-index="1">
                                <div class="category-card">
                                    <div class="box-shape background-image" style="background-image: url(&quot;Content/Refrence/img/bg/category_card_bg.png&quot;);"></div>
                                    <div class="box-icon bg-mask" style="mask-image: url(&quot;Content/Refrence/img/bg/category_card_icon_bg.png&quot;);"><img src="~/Content/Images/Categories/@value.ImageName" alt="Image"></div>
                                    <p class="box-subtitle">محصول : @value.Products.Count()</p>
                                    <h3 class="box-title"><a href="shop.html">@value.Tittle</a></h3>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="swiper-slide" role="group" aria-label="2 / 5" style="width: 246px; margin-left: 24px;" data-swiper-slide-index="1">
                                <div class="category-card">
                                    <div class="box-shape background-image" style="background-image: url(&quot;Content/Refrence/img/bg/category_card_bg.png&quot;);"></div>
                                    <div class="box-icon bg-mask" style="mask-image: url(&quot;Content/Refrence/img/bg/category_card_icon_bg.png&quot;);"><img src="~/Content/Images/Categories/@value.ImageName" alt="Image"></div>
                                    <p class="box-subtitle">محصول : @value.Products.Count()</p>
                                    <h3 class="box-title"><a href="shop.html">@value.Tittle</a></h3>
                                </div>
                            </div>
                        }
                    }

                </div>
                <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
            </div>
        </div>
    </section> @* end categories *@

    <div class="overflow-hidden space" id="about-sec">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-6 mb-30 mb-xl-0">
                    <div class="img-box1">
                        <div class="img1"><img src="Content/Refrence/img/normal/about_1_1.jpg" alt="About"></div>
                        <div class="img2"><img src="Content/Refrence/img/normal/about_1_2.jpg" alt="Image"></div>
                        <div class="shape1 movingX"><img src="Content/Refrence/img/normal/about_1_3.png" alt="Image"></div>
                        <div class="year-counter">
                            <div class="year-counter_number">
                                <span class="counter-number">23</span>+
                            </div>
                            <p class="year-counter_text">سالها تجربه</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="ps-xxl-5 ps-xl-2 ms-xl-1 text-center text-xl-start">
                        <div class="title-area mb-32">
                            <span class="sub-title"><img src="Content/Refrence/img/theme-img/title_icon.svg" alt="shape">درباره شرکت ما</span><h2 class="sec-title">درست غذا خوردن را با غذای ارگانیک شروع کنید</h2>
                            <p class="sec-text">غذاهای ارگانیک از طریق سیستم کشاورزی تولید می شوند که از استفاده از آفت کش های مصنوعی، علف کش ها، ارگانیسم های اصلاح شده ژنتیکی (GMOs) و کودهای مصنوعی اجتناب می کند. در عوض، کشاورزان ارگانیک به روش‌های طبیعی مانند تناوب زراعی متکی هستند. کمپوست سازی و کنترل بیولوژیکی آفات</p>
                        </div>
                        <div class="about-feature-wrap">
                            <div class="about-feature">
                                <div class="box-icon"><img src="Content/Refrence/img/icon/about_feature_1.svg" alt="Icon"></div>
                                <h3 class="box-title">رهبر کشاورزی</h3>
                            </div>
                            <div class="about-feature">
                                <div class="box-icon"><img src="Content/Refrence/img/icon/about_feature_2.svg" alt="Icon"></div>
                                <h3 class="box-title">راه حل های ارگانیک هوشمند</h3>
                            </div>
                        </div>
                        <div><a href="about.html" class="th-btn">بیشتر پیدا کن<i class="fas fa-chevrons-right ms-2"></i></a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="" data-pos-for="#shop-sec" data-sec-pos="bottom-half" style="margin-bottom: -186px;">
        <div class="container z-index-common">
            <div class="row gy-30">
                <div class="col-xl-6">
                    <div class="offer-card mega-hover background-image" style="background-image: url(&quot;Content/Refrence/img/bg/cta_bg_1_1.jpg&quot;);">
                        <span class="h6 box-subtitle">اضافی دریافت کنید<span class="text-theme"> 50 درصد تخفیف</span></span><h3 class="box-title">سبزیجات تازه &amp;<br>میوه های ارگانیک</h3>
                        <a href="shop-details.html" class="th-btn">اکنون خرید کنید<i class="fas fa-chevrons-right ms-2"></i></a>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="offer-card mega-hover background-image" style="background-image: url(&quot;Content/Refrence/img/bg/cta_bg_1_2.jpg&quot;);">
                        <span class="h6 box-subtitle">اضافی دریافت کنید<span class="text-theme"> 50 درصد تخفیف</span></span><h3 class="box-title">سبز و ارگانیک<br>سبزیجات</h3>
                        <a href="shop-details.html" class="th-btn">اکنون خرید کنید<i class="fas fa-chevrons-right ms-2"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @Html.Action("Index", "_ProductPartial") @* products (partail) *@

    @Html.Action("Index", "_BlogsPartial") @* last blogs (partial) *@

    @Html.Action("Index", "_SubscribeForm") @* subscribe form (partial) *@

</div>
